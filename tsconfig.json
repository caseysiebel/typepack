{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "jsx": "react",
        "outDir": "./dist/",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true, 
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ]
}
